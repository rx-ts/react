{
  "name": "@rxts/react",
  "version": "0.0.0",
  "description": "Make React greater with RxTS.",
  "repository": "git@github.com:rx-ts/react.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn clean && run-p build:**",
    "build:docs": "parcel build packages/*/docs/index.html --out-dir dist",
    "build:r": "r -p",
    "build:ts": "tsc -b",
    "clean": "rimraf dist packages/*/lib packages/*/*.tsbuildinfo",
    "dev": "parcel packages/*/docs/index.html",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --ext js,md,mdx,ts,tsx -f friendly",
    "lint:style": "stylelint **/*.scss",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc",
    "start": "serve dist",
    "type-coverage": "type-coverage --cache --ignore-catch --detail --ignore-files '**/*.d.ts' --strict"
  },
  "devDependencies": {
    "@1stg/app-config": "^0.1.21",
    "@1stg/lib-config": "^0.1.19",
    "@1stg/tslint-config": "^0.5.8",
    "@rxts/react-rx": "link:packages/react-rx/src",
    "@rxts/react-storage": "link:packages/react-storage/src",
    "@types/classnames": "^2.2.9",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.5.0",
    "@types/qrcode": "^1.3.4",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "classnames": "^2.2.6",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.0",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "qrcode": "^1.4.4",
    "qrious": "^4.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-qrcode": "link:packages/react-qrcode/src",
    "react-qrious": "link:packages/react-qrious/src",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "sanitize.css": "^11.0.0",
    "sass": "^1.25.1-test.1",
    "serve": "^11.3.0",
    "todomvc-app-css": "^2.3.0",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "type-coverage": "^2.4.0",
    "typescript": "^3.7.5"
  },
  "resolutions": {
    "@babel/core": "^7.8.3",
    "eslint-plugin-prettier": "^3.1.2"
  },
  "alias": {
    "lodash": "lodash-es"
  },
  "typeCoverage": {
    "atLeast": 100
  }
}

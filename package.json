{
  "name": "@rxts/react",
  "version": "0.0.0",
  "description": "Make React greater with RxTS.",
  "repository": "git@github.com:rx-ts/react.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:r build:ts build:docs",
    "build:docs": "w -e docs -p",
    "build:r": "r -p",
    "build:ts": "tsc -b",
    "clean": "rimraf dist packages/*/{lib,*.tsbuildinfo}",
    "dev": "w -e docs",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache --ext js,md,mdx,ts,tsx -f friendly",
    "lint:style": "stylelint --cache '**/*.scss'",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc",
    "postinstall": "yarn-deduplicate || exit 0",
    "start": "serve dist",
    "type-coverage": "type-coverage --cache --ignore-catch --detail --ignore-files '**/*.d.ts' --strict"
  },
  "devDependencies": {
    "@1stg/app-config": "^0.3.2",
    "@1stg/lib-config": "^0.3.0",
    "@1stg/tslint-config": "^0.7.0",
    "@mdx-js/react": "^1.5.5",
    "@pkgr/webpack": "^0.5.5",
    "@pkgr/webpack-mdx": "^0.2.4",
    "@pkgr/webpack-react": "^0.2.11",
    "@types/classnames": "^2.2.9",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.0",
    "@types/qrcode": "^1.3.4",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "classnames": "^2.2.6",
    "core-js": "^3.6.4",
    "lerna": "^3.20.2",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "prism-react-renderer": "^1.0.2",
    "qrcode": "^1.4.4",
    "qrious": "^4.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.19",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "rimraf": "^3.0.1",
    "rxjs": "^6.5.4",
    "sanitize.css": "^11.0.0",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.2",
    "serve": "^11.3.0",
    "todomvc-app-css": "^2.3.0",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "type-coverage": "^2.4.0",
    "typescript": "^3.7.5",
    "yarn-deduplicate": "^1.1.1"
  },
  "resolutions": {
    "@babel/core": "^7.8.4",
    "eslint-plugin-prettier": "^3.1.2",
    "imagemin-gifsicle": "^6.0.1"
  },
  "typeCoverage": {
    "atLeast": 100
  }
}

{
  "name": "@rxts/react",
  "version": "0.0.0",
  "description": "Make React greater with RxTS.",
  "repository": "git@github.com:rx-ts/react.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "parcel packages/*/docs/index.html",
    "lint:style": "stylelint **/*.scss",
    "lint:es": "eslint . --ext js,md,mdx,ts,tsx -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint": "run-p lint:*",
    "build:ts": "tsc -b",
    "build:bundle": "r --prod",
    "build:docs": "parcel build packages/*/docs/index.html --out-dir dist",
    "build": "rimraf dist && run-p build:**",
    "serve": "serve dist",
    "type-coverage": "type-coverage --cache --ignore-catch --detail --ignore-files *.d.ts --strict"
  },
  "devDependencies": {
    "@1stg/babel-preset": "^0.7.0",
    "@1stg/browserslist-config": "^0.2.1",
    "@1stg/commitlint-config": "^0.1.0",
    "@1stg/eslint-config": "^0.12.10",
    "@1stg/husky-config": "^0.3.0",
    "@1stg/lint-staged": "^0.7.4",
    "@1stg/postcss-config": "^0.3.0",
    "@1stg/prettier-config": "^0.2.0",
    "@1stg/remark-config": "^0.2.1",
    "@1stg/rollup-config": "^0.9.5",
    "@1stg/stylelint-config": "^0.6.3",
    "@1stg/tsconfig": "^0.5.1",
    "@1stg/tslint-config": "^0.3.3",
    "@babel/core": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@rxts/react-rx": "link:packages/react-rx/src",
    "@rxts/react-storage": "link:packages/react-storage/src",
    "@types/classnames": "^2.2.9",
    "@types/lodash": "^4.14.138",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^12.7.5",
    "@types/qrcode": "^1.3.4",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "browserslist": "^4.7.0",
    "classnames": "^2.2.6",
    "core-js": "^3.6.4",
    "cross-env": "^6.0.0",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.3.0",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.3",
    "postcss": "^7.0.18",
    "prettier": "^1.18.2",
    "qrcode": "^1.4.2",
    "qrious": "^4.0.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-qrcode": "link:packages/react-qrcode/src",
    "react-qrious": "link:packages/react-qrious/src",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.4",
    "rxjs": "^6.5.3",
    "sanitize.css": "^11.0.0",
    "sass": "^1.23.0-module.beta.1",
    "serve": "^11.1.0",
    "stylelint": "^11.0.0",
    "todomvc-app-css": "^2.2.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "type-coverage": "^2.3.0",
    "typescript": "^3.6.3"
  },
  "browserslist": [
    "extends @1stg/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "eslintIgnore": [
    ".cache",
    ".parcel-cache",
    "dist",
    "lib",
    "packages/*/CHANGELOG.md",
    "!.*.js"
  ],
  "prettier": "@1stg/prettier-config",
  "renovate": {
    "extends": "@1stg"
  },
  "resolutions": {
    "@babel/core": "^7.6.0"
  },
  "stylelint": {
    "extends": "@1stg/stylelint-config/scss"
  },
  "typeCoverage": {
    "atLeast": 100
  }
}

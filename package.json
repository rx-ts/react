{
  "name": "@rxts/react",
  "version": "0.0.0",
  "description": "Make React greater with RxTS.",
  "repository": "git@github.com:rx-ts/react.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:r build:ts build:docs",
    "build:docs": "w -e docs --publicPath / -p",
    "build:r": "r -f cjs",
    "build:ts": "tsc -b",
    "clean": "rimraf dist packages/*/{lib,*.tsbuildinfo}",
    "dev": "w -e docs --publicPath /",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:style": "stylelint --cache '**/*.scss'",
    "lint:ts": "tsc --noEmit",
    "prepare": "patch-package && simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "run-p build:r build:ts",
    "release": "changeset publish",
    "start": "sirv dist",
    "typecov": "type-coverage"
  },
  "devDependencies": {
    "@1stg/app-config": "^4.1.3",
    "@1stg/lib-config": "^6.1.3",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@mdx-js/react": "^2.1.1",
    "@pkgr/webpack": "^3.0.2",
    "@pkgr/webpack-mdx": "^2.0.1",
    "@pkgr/webpack-react": "^2.0.1",
    "@types/classnames": "^2.3.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.35",
    "@types/qrcode": "^1.4.2",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "classnames": "^2.3.1",
    "core-js": "^3.22.6",
    "github-markdown-css": "^5.1.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "patch-package": "^6.4.7",
    "prism-react-renderer": "^1.3.3",
    "qrcode": "^1.5.0",
    "qrious": "^4.0.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hot-loader": "^4.13.0",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "sanitize.css": "^13.0.0",
    "sirv-cli": "^2.0.2",
    "todomvc-app-css": "^2.4.2",
    "ts-node": "^10.8.0",
    "type-coverage": "^2.21.1",
    "typescript": "^4.6.4"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true
  }
}

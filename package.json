{
  "name": "react-qrious",
  "version": "1.0.5",
  "description": "a React component of generating qrcode with `qrious`",
  "module": "lib/react-qrious",
  "main": "dist/react-qrious",
  "unpkg": "dist/react-qrious",
  "browser": "dist/react-qrious",
  "repository": "git@github.com:JounQin/react-qrious.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "demo": "rollup -c rollup.demo-config.js",
    "dev": "yarn demo -- --watch",
    "client": "rollup -c",
    "server": "cross-env ENV=server rollup -c",
    "build": "yarn client && yarn server",
    "build:prod": "cross-env NODE_ENV=production yarn build",
    "dist": "yarn build && yarn build:prod",
    "lint": "eslint . --max-warnings=10",
    "lint:fix": "yarn lint --fix",
    "prepublishOnly": "yarn dist",
    "postinstall": "node ./check.js"
  },
  "files": ["check.js", "dist/*.js", "lib/*.js"],
  "eslintConfig": {
    "extends": "1stg/react"
  },
  "eslintIgnore": ["dist", "docs"],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.5",
    "eslint": "^6.0.1",
    "eslint-config-1stg": "^3.1.0",
    "prettier": "^1.12.1",
    "qrious": "^4.0.2",
    "rollup": "^1.16.6",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-watch": "^4.3.1"
  }
}

{
  "name": "@rxts/react",
  "version": "0.0.0",
  "description": "Make React greater with RxTS.",
  "repository": "git@github.com:rx-ts/react.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:r build:ts build:docs",
    "build:docs": "w -e docs --publicPath / -p",
    "build:r": "r -f cjs",
    "build:ts": "tsc -b",
    "clean": "rimraf dist packages/*/{lib,*.tsbuildinfo}",
    "dev": "w -e docs --publicPath /",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:style": "stylelint --cache '**/*.scss'",
    "prepare": "patch-package && simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "run-p build:r build:ts",
    "release": "changeset publish",
    "start": "serve dist -l 8000",
    "typecov": "type-coverage"
  },
  "devDependencies": {
    "@1stg/app-config": "^2.4.1",
    "@1stg/lib-config": "^4.1.2",
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.18.0",
    "@mdx-js/react": "^1.6.22",
    "@pkgr/webpack": "^1.1.2",
    "@pkgr/webpack-mdx": "^1.1.0",
    "@pkgr/webpack-react": "^1.1.0",
    "@types/classnames": "^2.3.1",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.9",
    "@types/qrcode": "^1.4.1",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "@types/react-router": "^5.1.17",
    "@types/react-router-dom": "^5.3.2",
    "classnames": "^2.3.1",
    "core-js": "^3.19.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "patch-package": "^6.4.7",
    "prism-react-renderer": "^1.2.1",
    "qrcode": "^1.4.4",
    "qrious": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "react-router": "^6.0.2",
    "react-router-dom": "^6.0.2",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "sanitize.css": "^13.0.0",
    "serve": "^13.0.2",
    "todomvc-app-css": "^2.4.1",
    "ts-node": "^10.4.0",
    "type-coverage": "^2.19.0",
    "typescript": "^4.5.2"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "showRelativePath": true,
    "strict": true
  }
}
